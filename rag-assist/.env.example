# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET_NAME=rag-assist-weekly-data
S3_DATA_PREFIX=data/

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://your-opensearch-endpoint.us-east-1.aoss.amazonaws.com
OPENSEARCH_INDEX_NAME=learning-content
OPENSEARCH_USE_SSL=true

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_LLM_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_GUARDRAIL_ID=your_guardrail_id_here
BEDROCK_GUARDRAIL_VERSION=DRAFT

# DynamoDB Configuration (for session memory)
DYNAMODB_TABLE_NAME=rag-assist-sessions
DYNAMODB_TTL_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_CORS_ORIGINS=["http://localhost:3000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# RAG Configuration
RAG_MAX_CONTEXT_TOKENS=4000
RAG_TOP_K_RETRIEVAL=10
RAG_VECTOR_WEIGHT=0.7
RAG_KEYWORD_WEIGHT=0.3
RAG_SIMILARITY_THRESHOLD=0.85

# Chunking Configuration
CHUNK_SIZE_TOKENS=500
CHUNK_OVERLAP_TOKENS=50

# Deduplication Configuration
DEDUP_EXACT_HASH=true
DEDUP_SEMANTIC=true
DEDUP_SEMANTIC_THRESHOLD=0.92

# Memory Configuration
MEMORY_ENABLED=true
MEMORY_WINDOW_SIZE=10
